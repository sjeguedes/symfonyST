; https://github.com/editorconfig/editorconfig/wiki/Projects-Using-EditorConfig
; https://github.com/Elao/symfony-standard/blob/master/.editorconfig
; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

; Customized!
[*.{php,yaml,yml,js,json,scss,css}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false